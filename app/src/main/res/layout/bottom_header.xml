<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bottom_header"
    android:layout_height="62dp">
    <LinearLayout
        android:id="@+id/monday_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/monday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/monday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MON"
            android:textColor="#C4C4C4"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/monday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/monday_container"
        app:layout_constraintRight_toRightOf="@id/monday_container"
        app:layout_constraintBottom_toBottomOf="@id/monday_container"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/tuesday_container"
        app:layout_constraintLeft_toRightOf="@id/monday_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tuesday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/tuesday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TUE"
            android:textColor="#C4C4C4"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/tuesday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/tuesday_container"
        app:layout_constraintRight_toRightOf="@id/tuesday_container"
        app:layout_constraintBottom_toBottomOf="@id/tuesday_container"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/wednesday_container"
        app:layout_constraintLeft_toRightOf="@id/tuesday_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/wednesday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/wednesday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="WED"
            android:textColor="#C4C4C4"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/wednesday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/wednesday_container"
        app:layout_constraintRight_toRightOf="@id/wednesday_container"
        app:layout_constraintBottom_toBottomOf="@id/wednesday_container"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/thursday_container"
        app:layout_constraintLeft_toRightOf="@id/wednesday_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/thursday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/thursday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="THU"
            android:textColor="#C4C4C4"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/thursday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/thursday_container"
        app:layout_constraintRight_toRightOf="@id/thursday_container"
        app:layout_constraintBottom_toBottomOf="@id/thursday_container"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/friday_container"
        app:layout_constraintLeft_toRightOf="@id/thursday_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/friday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/friday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="FRI"
            android:textColor="#C4C4C4"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/friday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/friday_container"
        app:layout_constraintRight_toRightOf="@id/friday_container"
        app:layout_constraintBottom_toBottomOf="@id/friday_container"
        app:layout_constraintWidth_percent=".14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/saturday_container"
        app:layout_constraintLeft_toRightOf="@id/friday_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".15"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/saturday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/saturday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SAT"
            android:textColor="#C4C4C4"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/saturday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/saturday_container"
        app:layout_constraintRight_toRightOf="@id/saturday_container"
        app:layout_constraintBottom_toBottomOf="@id/saturday_container"
        app:layout_constraintWidth_percent=".15"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>

    <LinearLayout
        android:id="@+id/sunday_container"
        app:layout_constraintLeft_toRightOf="@id/saturday_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".15"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/sunday_circle"
            android:layout_marginTop="7dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_not_selected"/>

        <TextView
            android:id="@+id/sunday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SUN"
            android:textColor="#C4C4C4"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/sunday_border"
        app:layout_goneMarginBottom="-1dp"
        app:layout_constraintLeft_toLeftOf="@id/sunday_container"
        app:layout_constraintRight_toRightOf="@id/sunday_container"
        app:layout_constraintBottom_toBottomOf="@id/sunday_container"
        app:layout_constraintWidth_percent=".15"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_date_divider_not_selected"/>


</androidx.constraintlayout.widget.ConstraintLayout>